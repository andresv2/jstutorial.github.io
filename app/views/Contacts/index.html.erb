
<center><h3> Subscribe</h3></center>
 <div class="row">
  <div class="col s2">&nbsp;</div>
  <form class="col s8">
    <div class="row">
      <div class="input-field col s6">
        <input id="first_name" type="text" placeholder="First Name" class="validate">
      </div>
      <div class="input-field col s6">
        <input id="last_name" type="text" placeholder="Last Name" class="validate">

      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="Neighbourhood" type="text" placeholder="Neighbourhood" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="email" type="email" placeholder="email" class="validate">
      </div>
    </div>
    <div class="row">
     <div id="bttn"><button class="btn waves-effect waves-light" type="submit" name="action">Submit </div>
    <i class="mdi-content-send right"></i>
  </button>
    </div>

  </form>

<script>
function formvalidate(event){
//removed console log because that only works in ie
// when debugging
    var button = document.getElementById("bttn").value;
    if(button==""){
       alert("hello world");
       if(event.preventDefault){ event.preventDefault()};
       if(window.event){window.event.returnValue = false;}
    }
}
var bttn =document.getElementById("bttn");
if(bttn.addEventListener){
    bttn.addEventListener("submit",formvalidate,false);
}else{
    //ie doesn't have addEventListener
    bttn.attachEvent('onsubmit', formvalidate);
}

</script>
